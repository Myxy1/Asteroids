<Window x:Class="Asteroids.Menu"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Asteroids"
        mc:Ignorable="d"
        Title="Asteroids" Height="350" Width="525">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Button Name="buttonElinditas" 
                Height="50" Width="100"
                Content="Elindítás"
                Grid.Row="0" Click="buttonElinditas_Click"/>
        <Button Name="buttonRanglista" 
                Height="50" Width="100"
                Content="Ranglista"
                Grid.Row="1"/>
        <Button Name="buttonLeallitas"
                Height="50" Width="100"
                Content="Kilépés"
                Grid.Row="2" Click="buttonLeallitas_Click"/>
    </Grid>
</Window>
