<Window x:Class="Asteroids.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Asteroids"
        mc:Ignorable="d"
        Title="Asteroids" Height="350" Width="525"
        FocusManager.FocusedElement="{Binding ElementName=MyCanvas}"
        WindowState="Maximized">
    <Canvas Name="MyCanvas" KeyDown="Canvas_KeyDown" Focusable="True" Background="Black">
        <Image Name="hajo" Height="40" Width="60" Source="hajoJobbra.jpg" Canvas.Left="10" Canvas.Top="10"/>
    </Canvas>
</Window>
